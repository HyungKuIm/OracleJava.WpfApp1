<UserControl x:Class="Oraclejava.WpfLibrary.View.WeatherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Oraclejava.WpfLibrary.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding City}" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" />
                    <StackPanel VerticalAlignment="Stretch" Orientation="Horizontal">
                        <Button x:Name="btnRefresh" Content="Refresh" Width="100" Margin="5" Command="{Binding RefreshCommand}"/>
                        <Button x:Name="btnSettings" Content="Settings" Width="100" Margin="5" Command="{Binding SettingsCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="1" VerticalAlignment="Stretch" Orientation="Vertical" HorizontalAlignment="Center">
                <Image Source="pack://application:,,,/OracleJava.WpfApp1;component/Images/Weather/sun.png" Width="100" Height="100" Margin="0,10,0,10"/>

                <DataGrid ItemsSource="{Binding ForecastDays}" AutoGenerateColumns="False" IsReadOnly="True" Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" />
                        <DataGridTextColumn Header="Min Temp (°C)" Binding="{Binding Min}" />
                        <DataGridTextColumn Header="Max Temp (°C)" Binding="{Binding Max}" />
                        <DataGridTextColumn Header="Weather" Binding="{Binding Weather}" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
